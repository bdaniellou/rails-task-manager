<h1><%= @task.title %></h1>
<div class="button">
  <%= link_to 'Edit Task', edit_path %>
</div>

<div class="container">
  <%= @task.details %>
</div>

<% if @task.completed %>
    <p><i class="fa fa-check-square"></i> This task is completed </p>
  <% else %>
    <p><i class="fa fa-square"></i> This task is not completed yet</p>
<% end %>


<%= link_to 'Back to list', tasks_path %>
